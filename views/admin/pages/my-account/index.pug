extends ../../layouts/default.pug 

block main 
    .container.mb-5
        h1.display-4.text-center Thong tin ca nhan

    if(user.avatar)
        img(src=user.avatar width="150px" class="mb-3")
    else 
        img(src="/admin/images/avatar.png" width="150px" class="mb-3")

    if(user.fullName)
        p Họ tên: <b>#{user.fullName}</b>

    if(user.email)
        p Email: <b>#{user.email}</b>

    if(user.phone)
        p Số điện thoại: <b>#{user.phone}</b>
    
    p 
        span Trạng thái: 
        span 
            <b>#{user.status === "active" ? "Hoạt động" : "Dừng hoạt động"}</b>

    if(role.title)
        p Phân quyền: <b>#{role.title}</b>

    if(role.permissions.includes("accounts_edit"))
        a(
            href=`${prefixAdmin}/my-account/edit/${user.id}`
            class="btn btn-primary"
        ) Chỉnh sửa thông tin 