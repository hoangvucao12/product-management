extends ../../layouts/auth.pug 
include ../../mixins/alert.pug

block main 
    +alert-success(5000)
    +alert-error(5000)

    .container.my-5 
        .row.justify-content-center
            .col-12
                h1(class="text-center mb-4") Đăng nhập
            .col-12
                form(
                    action=`${prefixAdmin}/auth/login`
                    method="POST"
                )
                    div(class="mb-3") 
                        label(for="email") Email
                        input(
                            type="text"
                            class="form-control"
                            id="email"
                            name="email"
                        )

                    div(class="mb-3") 
                        label(for="password") Mật khẩu
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                        )

                    div(class="mb-3")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Đăng nhập
