extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main 
    if(role.permissions.includes("roles_create"))
        +alert-success(5000)

        .container.mb-5
            h1.display-4.text-center Them moi nhom quyen

        form(
            action=`${prefixAdmin}/role/create`
            method="POST"
        )
            div(class="mb-3") 
                label(for="title") Tiêu đề
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    required 
                )

            div(class="mb-3") 
                label(for="desc") Mô tả
                input(
                    type="text"
                    class="form-control"
                    id="desc"
                    name="description"
                )

            div(class="mb-3")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Tạo mới 

