extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main 
    if(role.permissions.includes("roles_edit"))
        +alert-success(5000)

        h1(class="mb-4") Chỉnh sửa nhóm quyền

        form(
            action=`${prefixAdmin}/role/edit/${data.id}?_method=PATCH`
            method="POST"
        )
            div(class="mb-3") 
                label(for="title") Tiêu đề
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    required 
                    value=data.title
                )

            div(class="mb-3") 
                label(for="desc") Mô tả
                input(
                    type="text"
                    class="form-control"
                    id="desc"
                    name="description"
                    value=data.description
                )

            div(class="mb-3")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập nhật

