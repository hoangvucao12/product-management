extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main 
    if(role.permissions.includes("roles_view"))
        +alert-success(5000)
        +alert-error(5000)

        .container.mb-5
            h1.display-4.text-center Nhom quyen

        .card.mb-3 
            .card-header Danh sách 
            .card-body 
                .row 
                    .col-8 
                    .col-4
                        if(role.permissions.includes("roles_create")) 
                            a(
                                href=`${prefixAdmin}/role/create`
                                class="btn btn-outline-success"
                            ) + Thêm mới
                table(
                    class="table table-hover table-sm"
                )
                    thead 
                        tr 
                            th STT
                            th Nhóm quyền
                            th Mô tả ngắn
                            th Hành động

                    tbody 
                        if(records.length > 0)
                            each item, index in records
                                tr 
                                    td #{index + 1}
                                    td #{item.title} 
                                    td #{item.description}
                                    td
                                        if(role.permissions.includes("roles_edit"))
                                            a(
                                                class="btn btn-warning btn-sm"
                                                href=`${prefixAdmin}/role/edit/${item.id}`
                                            ) Sửa
                                        if(role.permissions.includes("roles_delete"))
                                            button(
                                                class="btn btn-danger btn-sm ml-1" data-id=item.id button-delete
                                            ) Xóa
                        else 
                            tr 
                                td(colspan="4" class="text-center") Chưa có nhóm quyền nào được tạo.

        form(action="" method="POST" id="form-delete-item" data-path=`${prefixAdmin}/role/delete`)

        script(src="/admin/js/product.js")

