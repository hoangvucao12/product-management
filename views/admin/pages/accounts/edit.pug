extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main
    if(role.permissions.includes("accounts_edit")) 
        +alert-success(5000)
        +alert-error(5000)

        .container.mb-5
            h1.display-4.text-center Chinh sua tai khoan

        if(roles)
            form(
                action=`${prefixAdmin}/accounts/edit/${data.id}?_method=PATCH`
                method="POST"
                enctype="multipart/form-data"
            )
                div(class="mb-3") 
                    label(for="fullName") Họ tên *
                    input(
                        type="text"
                        class="form-control"
                        id="fullName"
                        name="fullName"
                        required 
                        value=data.fullName
                    )

                div(class="mb-3") 
                    label(for="email") Email
                    input(
                        type="text"
                        class="form-control"
                        id="email"
                        name="email"
                        value=data.email
                    )

                div(class="mb-3") 
                    label(for="password") Mật khẩu *
                    input(
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                    )

                div(class="mb-3") 
                    label(for="phone") Số điện thoại  
                    input(
                        type="phone"
                        class="form-control"
                        id="phone"
                        name="phone"
                        value=data.phone 
                    )

                div(
                    class="mb-3 upload-image has-image"
                    upload-image 
                ) 
                    label(for="avatar") Avatar
                    input(
                        type="file"
                        class="form-control-file upload-image-input"
                        id="avatar"
                        name="avatar"
                        accept="image/*"
                        upload-image-input 
                    )
                    <span class="close-image">x</span>
                    img(
                        src=data.avatar
                        class="upload-image-preview "
                        upload-image-preview 
                    )

                div(class="mb-3") 
                    label(for="role_id") Phân quyền  
                    select(name="role_id" id="role_id" class="form-select")
                        option(disabled) -- Chọn -- 
                        each item in roles 
                            option(
                                value=item.id 
                                selected=(item.id == data.role_id ? true : false)
                            ) #{item.title} 

                div(class="mb-3 form-check form-check-inline") 
                    input(
                        type="radio"
                        class="form-check-input"
                        id="statusActive"
                        name="status"
                        value="active"
                        checked=(data.status == "active" ? true : false)
                    )
                    label(for="statusActive" class="form-check-label") Hoạt động 

                div(class="mb-3 form-check form-check-inline") 
                    input(
                        type="radio"
                        class="form-check-input"
                        id="statusInActive"
                        name="status"
                        value="inactive"
                        checked=(data.status == "inactive" ? true : false)
                    )
                    label(for="statusInActive" class="form-check-label") Dừng hoạt động
            

                div(class="mb-3")
                    button(
                        type="submit"
                        class="btn btn-primary"
                    ) Cập nhật

